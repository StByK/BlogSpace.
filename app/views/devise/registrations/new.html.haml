%h2.textcenter BlogSpace.へようこそ
%p.textcenter 今日という1日をみんなと共有しましょう
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .row
    .field.col.s4.offset-s4
      = f.label :name
      %br/
      = f.text_field :name, autofocus: true, autocomplete: "name"
  .row
    .field.col.s4.offset-s4
      = f.label :email
      %br/
      = f.email_field :email, autocomplete: "email"
  .row
    .field.col.s4.offset-s4
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password"
  .row
    .field.col.s4.offset-s4
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password"
  .row
    = f.submit "サインアップ", class: "waves-effect waves-light btn-large col s4 offset-s4"
  .row
    = link_to new_user_session_path, class: "waves-effect waves-teal btn-large col s4 offset-s4" do
      ログイン
